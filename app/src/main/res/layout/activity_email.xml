<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="4dp"
    android:background="@color/lightBlue"
    tools:context="com.CargoTrack.cargotrack.EmailActivity">

    <EditText
        android:id="@+id/etTo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginStart="4dp"
        android:hint="Receiver's Email Address!"
        android:inputType="textEmailAddress"
        android:singleLine="true"
        app:layout_constraintBaseline_toBaselineOf="@+id/btAttachment"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/etSubject"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginStart="9dp"
        android:layout_marginEnd="9dp"
        android:hint="Enter Subject"
        android:singleLine="true"
        app:layout_constraintBaseline_toBaselineOf="@+id/etTo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/etMessage"
        android:layout_width="390dp"
        android:layout_height="200dp"
        android:layout_margin="1dp"
        android:layout_marginStart="9dp"
        android:layout_marginEnd="9dp"
        android:gravity="top|start"
        android:hint="Compose Email"
        android:inputType="textMultiLine"
        app:layout_constraintBaseline_toBaselineOf="@+id/etTo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btSend"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="7dp"
            android:backgroundTint="@color/darkBlue"
            android:text="Send"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
        android:id="@+id/btAttachment"
        android:layout_width="121dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="160dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="0dp"
        android:backgroundTint="@color/darkBlue"
        android:text="attach file"
        app:layout_constraintTop_toTopOf="@+id/btSend" />
    </RelativeLayout>
    <TextView
        android:id="@+id/tvAttachment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/baseline_attach_file_24"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/etTo"
        app:layout_constraintEnd_toStartOf="@+id/etTo"
        app:layout_constraintStart_toStartOf="@+id/etTo"
        app:layout_constraintTop_toTopOf="@+id/etTo" />

</LinearLayout>
