<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/opscocean">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:backgroundTint="@color/lightBlue"
            android:layout_gravity="center_horizontal"
            android:padding="24dp"
            android:background="@drawable/custom_edittext">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-10dp"
                android:text="Select An Action"
                android:id="@+id/selectAnOption"
                android:textSize="60sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/white"
                />

            <Button
                android:id="@+id/selectFromFiles"
                android:layout_width="300dp"
                android:layout_height="80dp"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/darkBlue"
                android:layout_gravity="center_horizontal"
                android:text="Select from Files"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="18sp"
                app:cornerRadius="20dp"/>

            <Button
                android:id="@+id/takeAPhoto"
                android:layout_width="300dp"
                android:layout_height="80dp"
                android:layout_marginTop="15dp"
                android:backgroundTint="@color/darkBlue"
                android:layout_gravity="center_horizontal"
                android:text="Take a Photo"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="18sp"
                app:cornerRadius="20dp"/>

            <Button
                android:id="@+id/selectFromGallery"
                android:layout_width="300dp"
                android:layout_height="80dp"
                android:layout_marginTop="15dp"
                android:backgroundTint="@color/darkBlue"
                android:layout_gravity="center_horizontal"
                android:text="Select from Gallery"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="18sp"
                app:cornerRadius="20dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>



</LinearLayout>